{% extends 'base.html.twig' %}

{% block title %}Afficher Equipe{% endblock %}

{% block body %}
    <div class="d-flex flex-justify-content-center">
        <h1 class="display-1 border border-dark rounded mx-auto mt-2 p-2">Afficher Equipe</h1>
    </div>
    <img src= "{{ photo }}">
    <table class="table table-striped">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ equipe.id }}</td>
            </tr>
            <tr>
                <th>Libelle</th>
                <td>{{ equipe.libelle }}</td>
            </tr>
            <tr>
                <th>Entraineur</th>
                <td>{{ equipe.entraineur }}</td>
            </tr>
            <tr>
                <th>Créneaux</th>
                <td>{{ equipe.creneaux }}</td>
            </tr>
            <tr>
                <th>Lien photo</th>
                <td>{{ equipe.urlPhoto }}</td>
            </tr>
            <tr>
                <th>Lien calendrier</th>
                <td>{{ equipe.urlResultCalendrier }}</td>
            </tr>
            <tr>
                <th>Commentaire</th>
                <td>{{ equipe.commentaire }}</td>
            </tr>
        </tbody>
    </table>
    <div class="d-flex flex-row-reverse px-2 justify-content-space-around">
        {% if is_granted('ROLE_USER') %}
        {{ include('equipe/_delete_form.html.twig') }}
        <a class="btn btn-primary mx-2" href="{{ path('app_equipe_edit', {'id': equipe.id}) }}">Modifier</a>
        {% endif %}
        <a class="btn btn-secondary" href="{{ path('app_equipe_index') }}">Retour à la liste</a>
    </div>
{% endblock %}

{{ form_start(form) }}
    <div class="form mx-3 my-auto">
        <div class="input-group mb-3">
            {{ form_label(form.login, null, {'label_attr': {'class': 'input-group-text'}}) }}
            {{ form_widget(form.login, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="input-group mb-3">
            {{ form_label(form.password, null, {'label_attr': {'class': 'input-group-text'}}) }}
            {{ form_widget(form.password, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="form-check form-switch">
            {{ form_widget(form.admin, {'attr': {'class': 'form-control form-check-input'}}) }}
            {{ form_label(form.admin) }}
        </div>
        <div class="d-flex flex-row-reverse px-2 justify-content-space-around py-2">
            <button class="btn btn-success d-flex flex-row-reverse mx-2">{{ button_label|default('Save') }}</button>
            <a class="btn btn-secondary" href="{{ path('app_user_index') }}">back to list</a>
        </div>
    </div>

{{ form_end(form) }}

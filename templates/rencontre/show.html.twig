{% extends 'base.html.twig' %}

{% block title %}Rencontre{% endblock %}

{% block body %}
    <div class="d-flex flex-justify-content-center">
        <h1 class="display-1 border border-dark rounded mx-auto mt-2 p-2">Rencontre</h1>
    </div>

    <table class="table table-striped">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ rencontre.id }}</td>
            </tr>
            <tr>
                <th>Domicile extérieur</th>
                <td>{{ rencontre.domicileExterieur ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Hôte</th>
                <td>{{ rencontre.hote }}</td>
            </tr>
            <tr>
                <th>Heure</th>
                <td>{{ rencontre.dateHeure ? rencontre.dateHeure|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Numéro semaine</th>
                <td>{{ rencontre.numSemaine }}</td>
            </tr>
            <tr>
                <th>Numéro journée</th>
                <td>{{ rencontre.numJournee }}</td>
            </tr>
            <tr>
                <th>Gymnase</th>
                <td>{{ rencontre.gymnase }}</td>
            </tr>
            <tr>
                <th>Equipe adverse</th>
                <td>{{ rencontre.equipeAdverse }}</td>
            </tr>
        </tbody>
    </table>
    <div class="d-flex flex-row-reverse px-2 justify-content-space-around">
        {% if is_granted('ROLE_USER') %}
        {{ include('rencontre/_delete_form.html.twig') }}
        <a class="btn btn-primary mx-2" href="{{ path('app_rencontre_edit', {'id': rencontre.id}) }}">Modifier</a>
        {% endif %}
        <a class="btn btn-secondary" href="{{ path('app_rencontre_index') }}">Retour à la liste</a>
    </div>

{% endblock %}
